{
  "compilerOptions": {
    "assumeChangesOnlyAffectDirectDependencies": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "composite": true,
    "lib": [
      "esnext"
    ],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitThis": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "rootDirs": [
      "src/index.ts",
      "types/**/*.ts",
      "abis/**/*.abi.json"
    ],
    "target": "es6",
  },
  "include": [
    "src/index.ts",
    "types/**/common.ts",
    "types/**/draft-EIP712.ts",
    "types/**/EIP712Base.ts",
    "types/**/PriceConsumerV3.ts",
    "types/**/PublicGoodsAreGood.ts",
    "types/**/StaticTranslations.ts",
    "types/**/AcknowledgementSignature.ts",
    "types/**/RegistrationSignature.ts",
    "types/**/SourceRegistry.ts",
    "types/**/StolenWalletNFT.ts",
    "types/**/StolenWalletRegistry.ts",
    "types/**/TargetRegistry.ts",
    "abis/PublicGoodsAreGood.abi.json",
    "abis/AcknowledgementSignature.abi.json",
    "abis/RegistrationSignature.abi.json",
    "abis/SourceRegistry.abi.json",
    "abis/StolenWalletNFT.abi.json",
    "abis/StolenWalletRegistry.abi.json",
    "abis/TargetRegistry.abi.json",
  ],
}
