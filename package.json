{
  "name": "femplate",
  "description": "Robust Template for Foundry Projects",
  "author": "Andreas Bigger <andreas@nascent.xyz>",
  "license": "AGPL-3.0-only",
  "version": "1.5.0",
  "files": [
    "src/**/*.sol"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/abigger87/femplate.git"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.6.4",
    "@ethersproject/providers": "^5.6.8",
    "@typechain/ethers-v5": "^10.1.0",
    "ethers": "^5.6.9",
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "shx": "^0.3.4",
    "typechain": "^8.1.0",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "setup": "make clean && make build",
    "sync": "make update",
    "test": "make test",
    "snapshot": "make snapshot",
    "lint": "make lint",
    "build": "yarn build:clean && yarn build:sol && yarn copy:abis && yarn build:ts",
    "build:clean": "make clean && rm -rf dist abis && shx mkdir dist",
    "build:sol": "forge b --force --extra-output-files abi --optimizer-runs 200",
    "build:typechain": "shx mkdir dist/typechain && typechain --target ethers-v5 out/**/*.abi.json --out-dir dist/typechain/",
    "build:ts": "npx tsc --build tsconfig.build.json",
    "copy:abis": "shx mkdir abis && shx cp out/**.sol/*.abi.json abis/"
  }
}
